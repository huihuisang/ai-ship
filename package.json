{
  "name": "ai-ship",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "node -e \"const fs=require('fs');fs.rmSync('public',{recursive:true,force:true});\"",
    "clean:icons": "node scripts/clean-icons.js",
    "download:icons": "node scripts/download-icons.js",
    "build:icons": "node scripts/build-sprite.js",
    "build:css": "npx tailwindcss -i ./src/css/style.css -o ./src/static/assets/main.css --minify",
    "build:js": "node scripts/copy-js.js",
    "build:assets": "npm-run-all build:css build:js",
    "eleventy:build": "npx @11ty/eleventy",
    "eleventy:serve": "npx @11ty/eleventy --serve",
    "translate:articles": "node scripts/translate-articles.js",
    "build": "run-s clean download:icons build:icons translate:articles build:assets eleventy:build",
    "watch:css": "npx tailwindcss -i ./src/css/style.css -o ./src/static/assets/main.css --watch",
    "watch:js": "node scripts/copy-js.js --watch",
    "watch:eleventy": "npx @11ty/eleventy --serve --port 8081",
    "dev": "npm-run-all download:icons build:icons --parallel watch:css watch:js watch:eleventy",
    "lint": "eslint src/js --max-warnings=0",
    "format": "prettier --write \"src/**/*.{njk,md,css,js,json}\" eleventy.config.js Doc/**/*.md"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "svgstore": "^3.0.1",
    "tailwindcss": "^3.4.14",
    "openai": "^4.77.0"
  }
}
